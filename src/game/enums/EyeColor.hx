package game.enums;

enum EyeColor {
    // --- NATURAL / COMMON ---
    Brown;          // Most common human/primate color
    Blue;           // Recessive trait, classic "hero" look
    Green;          // Rare, often associated with magic/nature
    Hazel;          // Multi-colored shift (Brown/Green/Gold)
    Grey;           // Steel or slate, often for elders or stoics

    // --- RARE / GENETIC MUTATION ---
    Amber;          // Golden-yellow (Wolf-like)
    Violet;         // Very rare mutation or Targaryen-style fantasy
    Red;            // Albinism or enraged/evil status
    Pink;           // Albinism (softer than red)

    // --- EXOTIC / ANIMALISTIC ---
    Gold;           // Hawk-like, Dragon, or Sith
    Yellow;         // Reptilian, Jaundice, or Feral
    Orange;         // Fiery, often associated with corruption
    Black;          // Solid black (Alien, Demon, or dilated pupils)
    White;          // "Blind" seer look or storm-magic
    Colorless;      // Transparent/Glassy (Fish or Ghost)

    // --- METALLIC / SYNTHETIC ---
    Silver;         // Mercury look, often for cyborgs
    Bronze;         // Metallic brown/orange
    Chrome;         // Highly reflective mirror finish
    OilSlick;       // Iridescent rainbow sheen

    // --- ENERGY / TECH (Luminescence) ---
    GlowingBlue;    // Arc-reactor style energy
    GlowingRed;     // Terminator/HAL 9000 style
    GlowingGreen;   // Night-vision or Radiation
    GlowingWhite;   // Divine power or high-beam headlights
    Static;         // Digital noise or glitching display
}
