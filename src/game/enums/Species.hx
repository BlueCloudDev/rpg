package game.enums;
enum Species {
    // --- TYPE: BASELINE (Adaptable, Generalists) ---
    Human;          // The standard reference point
    Halfling;       // Smaller, stealthier baselines (Hobbits)

    // --- TYPE: ROBUST (High Gravity, Dense, Strong) ---
    Dwarf;          // Subterranean builders, high constitution
    Orc;            // High strength, tribal/militaristic
    Ogre;           // Massive size, lower intelligence
    Lithoid;        // Rock-based lifeforms / Silicon-based

    // --- TYPE: GRACILE (Low Gravity, Intelligent, Fragile) ---
    Elf;            // High dexterity/magic, long-lived
    Fairy;          // Diminutive, flight-capable, high magic
    Avian;          // Bird-people (Harpies or Raptor-aliens)
    Grey;           // Classic sci-fi alien (large head, frail body)

    // --- TYPE: HIVE (Fast Reproduction, Collective Intelligence) ---
    Goblin;         // Weak individually, dangerous in numbers
    Insectoid;      // Chitinous armor, hive mind (Zerg/Ant-people)
    Ratkin;         // Scavengers, plague-bearers (Skaven/Kobolds)

    // --- TYPE: SYNTHETIC (Non-biological, Constructs) ---
    Golem;          // Animated stone/clay (Magic power source)
    Android;        // Mechanical humanoid (Battery power source)
    Undead;         // Reanimated corpse (Necrotic power source)

    // --- TYPE: AQUATIC (Water/Void Dwellers, 3D Movement) ---
    Merfolk;        // Humanoid upper, fish lower
    Cephalopod;     // Tentacled, high intelligence (Mind Flayers/Squid-people)
    Reptilian;      // Cold-blooded, amphibious (Lizardmen)
}
